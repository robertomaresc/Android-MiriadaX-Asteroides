<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asteroides"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <!-- Pedimos permiso para leer el estado del telefono -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TemaAsteroides" >
        <activity
            android:name="com.example.asteroides.Asteroides"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AcercaDe"
            android:label="@string/activityLabelAcercaDe"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Preferencias"
            android:label="@string/activityLabelPreferencias"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Puntuaciones"
            android:label="@string/activityLabelPuntuaciones"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Juego"
            android:label="@string/activityLabelJuego"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        
        <!-- Declaramos servicio de Musica -->
        <service android:name=".ServicioMusica" />
        
        <!-- Registramos receptor de notificaciones SMS -->
        <receiver android:name=".ReceptorSMS" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>